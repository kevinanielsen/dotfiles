{
  "vim_mode": true,
  "assistant": {
    "version": "2",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-5-sonnet"
    }
  },
  "features": {
    "copilot": true
    // "inline_completion_provider": "supermaven"
  },
  "base_keymap": "VSCode",
  "theme": "Dracula",
  "ui_font_size": 16,
  "ui_font_family": "Geist Mono",
  "buffer_font_size": 16,
  "format_on_save": "off",
  "formatter": "prettier",
  "terminal": {
    "font_family": "FiraCode Nerd Font"
  },
  "tab_size": 2,
  "lsp": {
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "strict"
        },
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    }
  }
}
